#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    AnotherScreen:

<MainScreen>:
    name:'main'
    Button:
        on_release: app.root.current='other'
        text:'Next Screen'
        font_size: 50

<AnotherScreen>:
    name:'other'
    DrawInput:
    FloatLayout:
        Button:
            on_release: app.root.current='main'
            text:'Back to main'
            font_size: 25
            pos_hint: {'left':1, 'top':1}
            size_hint: 0.2, 0.075
